{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "product": {
        "ClusterId": "products",
        "Match": {
          "Path": "/products/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/products/{**catch-all}" }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "api/search/{**catch-all}"
          }
        ]
      },
      "categories": {
        "ClusterId": "categories",
        "Match": {
          "Path": "/categories/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/categories/{**catch-all}" }
        ]
      },
      "brands": {
        "ClusterId": "brands",
        "Match": {
          "Path": "/brands/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/brands/{**catch-all}" }
        ]
      },
      "cart": {
        "ClusterId": "cart",
        "Match": {
          "Path": "/cart/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/cart/{**catch-all}" }
        ]
      },
      "delivery": {
        "ClusterId": "delivery",
        "Match": {
          "Path": "/delivery/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/delivery/{**catch-all}" }
        ]
      },
      "order": {
        "ClusterId": "order",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/order/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "api/order/{**catch-all}"}
        ]
      }
    }
  }
 }
